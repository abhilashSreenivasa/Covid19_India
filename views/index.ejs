<div class="main">
    <div class="header">COVID19 <span>INDIA</span> </div>
    <marquee>
        Maintain social distancing. We will beat this pandemic eventually. Stay at home as much as possible. Thank you!
        </marquee>
<div class="total">
    <div class="total-cat">
        <div class="total-confirmed-text" >Confirmed</div>
        <div class="total-confirmed-delta">[+<%= new Intl.NumberFormat('en-IN').format(statesTotal[0].deltaconfirmed)%>]</div>
        <div class="total-confirmed"><%= new Intl.NumberFormat('en-IN').format(statesTotal[0].confirmed)  %></div>
    </div>

    <div class="total-cat">
        <div class="total-active-text">Active</div>
        <div class="total-active-delta">active</div>
        <div class="total-active"><%= new Intl.NumberFormat('en-IN').format( statesTotal[0].active)   %></div>
    </div>

    <div class="total-cat">
        <div class="total-recovered-text">Recovered</div>
        <div class="total-recovered-delta">[+<%=  new Intl.NumberFormat('en-IN').format(statesTotal[0].deltarecovered)   %>]</div>
        <div class="total-recovered"><%= new Intl.NumberFormat('en-IN').format(statesTotal[0].recovered)   %></div>
    </div>

    <div class="total-cat">
        <div class="total-deceased-text">Deceased</div>
        <div class="total-deceased-delta">[+<%=  new Intl.NumberFormat('en-IN').format(statesTotal[0].deltadeaths)   %>]</div>
        <div class="total-deceased"><%= new Intl.NumberFormat('en-IN').format(statesTotal[0].deaths)  %></div>

    </div>

</div>

<div class="state">
<div class="state-header">
    <div class="state-name-header">
        state
       
    </div>
    <div class="confirmed-header">
        <div class="head-dex">confirmed</div>
        <div class="head-phone">cnfrmd</div>

    </div>
    <div class="active-header">
        active

    </div>
    <div class="recovered-header">
        <div class="head-dex">recovered</div>
        <div class="head-phone">recvrd</div>
    </div>
    <div class="deceased-header">
        deaths
    </div>

   
</div>

 <% statesTotal.forEach(s=>{ %>
    <% if(s.state==="Total") { %>
        <%return;%>
        <% } %>
<div class="state-each">      
<div class="state-name">
   <%=s.state %>
</div>
<div class="confirmed">
    <div class="state-confirmed-delta">
        <% if(s.deltaconfirmed!=0){ %>
        +<%=s.deltaconfirmed %>
        <%} %>
    </div>
    <div class="state-confirmed">
        <%= new Intl.NumberFormat('en-IN').format(s.confirmed) %>
    </div>
    
</div>
<div class="active">
    <div class="state-active">
        <%= new Intl.NumberFormat('en-IN').format(s.active) %>
    </div>
   
</div>
<div class="recovered">
    <div class="state-recovered-delta">
        <% if(s.deltarecovered!=0){ %>
        +<%=s.deltarecovered %>
        <%} %>
    </div>
    <div class="state-recovered">
        <%= new Intl.NumberFormat('en-IN').format(s.recovered) %>
    </div>
    
</div>

<div class="deceased">
    <div class="state-deceased-delta">
        <% if(s.deltadeaths!=0) {%>
        +<%=s.deltadeaths %>
        <%} %>
    </div>

    <div class="state-deceased">
        <%= new Intl.NumberFormat('en-IN').format(s.deaths) %>
    </div>
</div>




</div> 
 
<% })  %>

</div>


</div>

<%- include('./partials/footer.ejs') %>